using System;
using System.Collections.Generic;
using System.Linq;

class Student
{
    public string FullName { get; set; }
    public int Age { get; set; }
    public double AverageGrade { get; set; }
}

class Program
{
    static void Main()
    {
        List<Student> students = new List<Student>
        {
            new Student { FullName = "Иванов Иван", Age = 20, AverageGrade = 85.5 },
            new Student { FullName = "Петров Петр", Age = 22, AverageGrade = 92.0 },
            new Student { FullName = "Сидорова Анна", Age = 19, AverageGrade = 78.0 },
            new Student { FullName = "Кузнецов Дмитрий", Age = 24, AverageGrade = 88.3 },
            new Student { FullName = "Смирнова Елена", Age = 21, AverageGrade = 95.0 }
        };

        Console.WriteLine("1. Хорошисты (средний балл от 75 до 90):");
        var goodStudents = students.Where(s => s.AverageGrade >= 75 && s.AverageGrade <= 90);
        foreach (var s in goodStudents)
            Console.WriteLine($"{s.FullName} - {s.AverageGrade}");

        Console.WriteLine("\n2. Список всех имен:");
        var names = students.Select(s => s.FullName);
        foreach (var name in names)
            Console.WriteLine(name);

        Console.WriteLine("\n3. Студенты, отсортированные по возрасту:");
        var sortedByAge = students.OrderBy(s => s.Age);
        foreach (var s in sortedByAge)
            Console.WriteLine($"{s.FullName}, возраст: {s.Age}");

        Console.WriteLine("\n4. Рейтинг студентов младше 25 лет:");
        var rating = students
            .Where(s => s.Age < 25)
            .OrderByDescending(s => s.AverageGrade)
            .Select(s => $"{s.FullName} - {s.AverageGrade}");
            
        foreach (var item in rating)
            Console.WriteLine(item);

        Console.ReadLine();
    }
}
