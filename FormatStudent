using System;

class Program
{
    static void Main()
    {
        string input = "иванов иван,петров петр, сидорова Анна, бобров БОРИС ";
        
        Console.WriteLine("Исходная строка: \"" + input + "\"");
        Console.WriteLine("\nОтформатированный список:");
        
        string[] names = input.Split(',', StringSplitOptions.RemoveEmptyEntries);
        
        for (int i = 0; i < names.Length; i++)
        {
            string name = names[i].Trim();
            
            string[] parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
            
            if (parts.Length >= 2)
            {
                string lastName = FormatName(parts[0]);
                string firstName = FormatName(parts[1]);
                
                Console.WriteLine($"{i + 1}. {lastName} {firstName}");
            }
        }
        
        Console.ReadLine();
    }
    
    static string FormatName(string name)
    {
        if (string.IsNullOrEmpty(name))
            return name;
            
        return char.ToUpper(name[0]) + name.Substring(1).ToLower();
    }
}
