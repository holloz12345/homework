using System;

class Program
{
    delegate double MathOperation(double a, double b);
    
    static double Calculate(double a, double b, MathOperation operation)
    {
        return operation(a, b);
    }
    
    static void Main()
    {
        Console.WriteLine("--- Универсальный калькулятор ---\n");
        
        Console.Write("Введите первое число: ");
        double num1 = Convert.ToDouble(Console.ReadLine());
        
        Console.Write("Введите второе число: ");
        double num2 = Convert.ToDouble(Console.ReadLine());
        
        Console.WriteLine("\n--- Результаты вычислений ---");
        
        Console.WriteLine($"Сложение: {Calculate(num1, num2, (x, y) => x + y)}");
        Console.WriteLine($"Вычитание: {Calculate(num1, num2, (x, y) => x - y)}");
        Console.WriteLine($"Умножение: {Calculate(num1, num2, (x, y) => x * y)}");
        Console.WriteLine($"Деление: {Calculate(num1, num2, (x, y) => x / y)}");
        
        Console.ReadLine();
    }
}
